<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:id="@+id/profileimagerecieved"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/Black"

                android:id="@+id/user_name_recieved"
                android:layout_toRightOf="@+id/profileimagerecieved"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/date_recieved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_recieved"
                android:layout_toRightOf="@+id/profileimagerecieved"
                android:textSize="15dp"
                android:textColor="@color/Black"

                android:text="12 Apr 2012"
                android:layout_marginLeft="10dp"
                />
            <View
                android:layout_width="wrap_content"
                android:background="@drawable/textfiles"
                android:layout_height="1dp"
                android:layout_below="@+id/profileimagerecieved"
                android:id="@+id/view">

            </View>
            <TextView
            android:id="@+id/description_recieved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="Description"
                android:textColor="@color/Black"
                android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>