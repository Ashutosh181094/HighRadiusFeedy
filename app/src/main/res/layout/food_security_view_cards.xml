<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:id="@+id/reviewing_card"
        android:layout_height="370dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/review_card_image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/food" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_card_image"
                android:paddingHorizontal="20dp"
                android:id="@+id/relative_layout_for_name_and_designation">

                <TextView
                    android:id="@+id/review_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="22sp"/>
                <TextView
                    android:id="@+id/review_card_department"
                    android:layout_below="@+id/review_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:visibility="invisible"
                    android:textStyle="italic"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/relative_layout_for_name_and_designation"

                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/happy"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/happy" />

                <ImageView
                    android:id="@+id/neutral"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="10dp"
                    android:visibility="invisible"
                    android:src="@drawable/neutral" />

                <ImageView
                    android:id="@+id/sad"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/sad" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/happy"
                    android:padding="15dp"


                    >
                    <TextView
                        android:id="@+id/positive_count_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="124"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/sad"
                     android:padding="15dp">

                <TextView

                    android:id="@+id/negative_count_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/sad"
                    android:text="124"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
        <!---->
    </android.support.v7.widget.CardView>


